<!DOCTYPE html>
%html{:lang => "en"}
  %head
    %meta{:charset => "UTF-8"}
    %title Cats vs Dogs
    %link(rel = "stylesheet" href = "styles.css")
  %body
    %div(class="main" data-anim-key="animals-init")
      .score
        .play
      .sky
      .clouds
        - (1..3).each do |i|
          %div(class = "cloud cloud-#{i}")
            - 5.times do
              .fluff
      .ground
        - 10.times do
          .grass
            - 3.times do
              .blade-wrap
                .blade
        -['cat', 'dog'].each do |i|
          %div(class = "animal animal-#{i}")
            -20.times do
              %div(class = "animal-wrap wrap-#{i}")
                %div(class = "#{i} bod furr stroke")
                  .halo
                  -if i == 'cat'
                    .ear.ear-left.furr.stroke
                    .ear.ear-right.furr.stroke
                    .face
                      .eyebrow
                      .eye
                        .pupil
                      .nose
                      .whiskers
                        -3.times do
                          .whisker
                    .arm.furr-2
                    .leg.leg-left.furr.stroke
                    .leg.leg-right.furr.stroke
                    .tail
                      -5.times do
                        .tail-section.furr.stroke
                  -if i == 'dog'
                    .ear.furr-2
                    .face
                      .eyebrow
                      .eye
                        .pupil
                      .snout.furr-2.stroke
                        .nose
                    .arm.furr-2
                    .leg.leg-left.furr.stroke
                    .leg.leg-right.furr.stroke
                    .tail.furr-2.stoke
        .cat.weapon.raygun
          .shell
            -4.times do
              .charger
          .laser.barrel
            -4.times do
              .laser.ring
            .rays
              -(1..3).each do |j|
                %div(class = "ray-wrap-#{j}")
                  -(1..2).each do |i|
                    %div(class = "ray ray-#{i}")
                      -16.times do
                        .ray-bit
          .stand
          .base
            -2.times do
              .wheel
                .rim.hub
                .spokes
                  -3.times do
                    .rim.spoke
        .dog.weapon.cannon
          .trajectory
            .ball
          .barrel.muzzle
            .barrel.cascabel
          .wheel
            .spokes
              -9.times do
                .spoke
    %script(src = "js.js")